<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.earl.radaquiz1.ISActivity">

    <TextView
        android:id="@+id/bscs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACHELOR OF SCIENCE IN INFORMATION SYSTEMS"
        android:textColor="#d0d60c"
        android:paddingTop="50dp"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/home"
        android:layout_alignStart="@+id/home"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(4 years)"
        android:textSize="11dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/bscs"
        android:layout_toRightOf="@+id/bscs"
        android:layout_toEndOf="@+id/bscs"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:text="Level I accredited by the Philippine Accrediting Association of
Schools, Colleges, and Universities"
        android:textColor="#000000"
        android:textStyle="italic"
        android:id="@+id/textView"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Students under the BS Information Systems program are
trained to handle the managerial side of computer related
activities. The focus of the program is effective
management of resources â€“ people, money, and computer
facilities, especially in areas involving accounting, projections/estimates/feasibility studies, and the like."
        android:layout_gravity="center_vertical"
        android:textColor="#000000"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/home"
        android:text="Home"
        android:onClick="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cs"
        android:onClick="CSActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CS Program"
        android:layout_alignBaseline="@+id/home"
        android:layout_alignBottom="@+id/home"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/it"
        android:onClick="ITActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT Program"
        android:layout_alignBaseline="@+id/cs"
        android:layout_alignBottom="@+id/cs"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

</RelativeLayout>
